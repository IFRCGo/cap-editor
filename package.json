{
  "name": "cap-editor",
  "description": "System to create, manage, publish, and sign Common Alerting Protocol alert messages",
  "author": {
    "email": "shubham@sjain.dev",
    "name": "Shubham Jain",
    "url": "https://sjain.dev"
  },
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "db:create-migration": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "start:prod": "prisma migrate deploy && next start",
    "lint": "next lint",
    "generate-cap-schema": "json2ts cap.schema.json > lib/types/cap.schema.ts && echo '\nexport const CAPV12Schema = ' >> lib/types/cap.schema.ts && cat cap.schema.json >> lib/types/cap.schema.ts",
    "postinstall": "prisma generate && lingui compile",
    "i18n:extract": "cross-env NODE_ENV=development lingui extract",
    "i18n:compile": "lingui compile",
    "test:api": "docker-compose -f docker-compose-test-api.yml up -d && jest --testPathPattern=tests/api --coverage --coverageReporters='text-summary'",
    "test:e2e": "cross-env NODE_ENV=test docker-compose -f docker-compose-test-e2e.yml up -d && jest --runInBand --testPathPattern=tests/e2e --coverage --coverageReporters='text-summary' --forceExit",
    "test:frontend": "jest --testPathPattern=tests/frontend --coverage --coverageReporters='text-summary' --silent",
    "docs:dev": "docsify serve docs --port 3001 --open",
    "docs:generate": "docsify generate docs"
  },
  "dependencies": {
    "@lingui/core": "^3.17.2",
    "@lingui/react": "^3.17.2",
    "@next-auth/prisma-adapter": "^1.0.5",
    "@prisma/client": "^4.10.1",
    "@rsuite/icons": "^1.0.2",
    "@simplewebauthn/browser": "^6.2.2",
    "@simplewebauthn/server": "^6.2.2",
    "@turf/flip": "^6.5.0",
    "@turf/truncate": "^6.5.0",
    "capgen": "^1.0.8",
    "cookies-next": "^2.1.1",
    "fast-xml-parser": "^4.1.2",
    "iso-639-1": "^2.1.15",
    "jsonschema": "^1.4.1",
    "net": "^1.0.2",
    "next": "13.0.7",
    "next-auth": "^4.19.2",
    "nodemailer": "^6.9.1",
    "ol": "^7.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "redis": "^4.6.4",
    "rsuite": "^5.28.0",
    "sharp": "^0.31.3",
    "staticmaps": "^1.11.1",
    "swr": "^2.0.3",
    "tls": "^0.0.1",
    "usehooks-ts": "^2.9.1",
    "whatwg-mimetype": "^3.0.0",
    "xmldsigjs": "^2.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@jest/globals": "^29.4.3",
    "@lingui/cli": "^3.17.2",
    "@lingui/macro": "^3.17.2",
    "@mermaid-js/mermaid-cli": "^10.0.0",
    "@simplewebauthn/typescript-types": "6.3.0-alpha.1",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "18.11.15",
    "@types/nodemailer": "^6.4.7",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@types/redis-mock": "^0.17.1",
    "@types/sharp": "^0.31.1",
    "@types/staticmaps": "^1.11.0",
    "@types/whatwg-mimetype": "^3.0.0",
    "babel-jest": "^29.4.3",
    "babel-plugin-macros": "^3.1.0",
    "cross-env": "^7.0.3",
    "docsify-cli": "^4.4.4",
    "eslint": "8.29.0",
    "eslint-config-next": "13.0.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "jest-environment-node": "^29.4.3",
    "json-schema-to-typescript": "^11.0.5",
    "node-mocks-http": "^1.12.1",
    "po-csv": "^1.0.3",
    "pptr-testing-library": "^0.7.0",
    "prisma": "^4.10.1",
    "prisma-dbml-generator": "^0.10.0",
    "prisma-erd-generator": "^1.2.5",
    "puppeteer": "^19.7.2",
    "quoted-printable": "^1.0.1",
    "redis-mock": "^0.56.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
